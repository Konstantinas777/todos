<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1">
   <session-config>
       <session-timeout>
           30
       </session-timeout>
   </session-config>
   <!--Parameter for context loader with spring configuration file location-->
   <context-param>
       <param-name>contextConfigLocation</param-name>
       <param-value>
           /WEB-INF/spring.xml
       </param-value>
   </context-param>
   <!--Spring context loader - initializes application wide spring application context-->
   <listener>
       <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
   </listener>

   <!--Filter for enforcing UTF-8 encoding for communiction between server and client-->
   <filter>
       <filter-name>charsetFilter</filter-name>
       <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
       <init-param>
           <param-name>encoding</param-name>
           <param-value>UTF-8</param-value>
       </init-param>
   </filter>
   <filter-mapping>
       <filter-name>charsetFilter</filter-name>
       <url-pattern>/*</url-pattern>
   </filter-mapping>
   <filter>
       <filter-name>oemInViewFilter</filter-name>
       <filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
       <init-param>
           <param-name>entityManagerFactoryBeanName</param-name>
           <param-value>entityManagerFactory</param-value>
       </init-param>
   </filter>
   <filter-mapping>
       <filter-name>oemInViewFilter</filter-name>
       <url-pattern>/*</url-pattern>
   </filter-mapping>
   <!--Filter for secure access to resources-->
   <filter>
       <filter-name>springSecurityFilterChain</filter-name>
       <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
   </filter>
   <filter-mapping>
       <filter-name>springSecurityFilterChain</filter-name>
       <url-pattern>/*</url-pattern>
   </filter-mapping>

   <!--Spring front controller for MVC-->
   <!--By default controller configuration is read from /WEB-INF/(servlet-name)-servlet.xml-->
   <servlet>
       <servlet-name>dispatcher</servlet-name>
       <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
       <load-on-startup>1</load-on-startup>
   </servlet>
   <servlet-mapping>
       <servlet-name>dispatcher</servlet-name>
       <url-pattern>/</url-pattern>
   </servlet-mapping>
</web-app>



